@model List<HnJ.Helper.Models.Genre>
@{
    ViewBag.Title = "Genres";
}
<hr/>
<h2>Genres</h2>

<a href='@Url.Action("Manage")'>
    <button type="button" class="btn btn-primary btn-default">
        <span class="glyphicon glyphicon-plus"></span> Add
    </button>
</a>

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert" style="margin-top:10px;">
        Empty.
    </div>
}
else
{
    <table class="table table-bordered" style="width:100%; margin-top:10px;">

        <tr>
            <th>Name</th>
            <th></th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td style="text-align:right">
                    @Html.ActionLink(" ", "Manage", new { @id = item.Id }, new { @class = "btn btn-success glyphicon glyphicon-pencil" })
                    @Html.ActionLink(" ", "Delete", new { @id = item.Id }, new { @class = "btn btn-danger glyphicon glyphicon-trash", @onclick = "return confirm('Are you sure you want to delete this genre?');" })
                </td>
            </tr>
        }

    </table>
}